{
    "compilerOptions": {
      "isolatedModules": true,
      "target": "es5",
      "module": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": [ "es2015", "dom" ],
      "noImplicitAny": true,
      "suppressImplicitAnyIndexErrors": true,
      "removeComments": true
    },
    "include": [
      "client/**/*.ts"
    ]
  }